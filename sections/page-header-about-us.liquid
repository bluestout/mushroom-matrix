{% schema %}
{
  "name": "About Us Page Header",
  "tag": "section",
  "class": "about-us-header-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "textarea",
      "id": "intro_text",
      "label": "Introduction Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Founders Image"
    },
    {
      "type": "richtext",
      "id": "founders_text",
      "label": "Founders Description"
    }
  ],
  "presets": [
    {
      "name": "About Us Page Header"
    }
  ]
}
{% endschema %}

{% style %}
  .about-us-page-header-section {
    background: #f6f7f8;
  }
  .aup-header-banner-container {
    text-align: center;
    padding: 4.7rem;
  }

  .aup-header-title {
    color: #000;
    font-family: Anuphan;
    font-size: 48px;
    font-weight: 600;
    line-height: 65px; /* 135.417% */
    letter-spacing: -1px;
    text-transform: capitalize;

    margin-top: 0;
    margin-bottom: 1.3rem;
  }

  .aup-header-text {
    color: var(--Text-black, #000);
    text-align: center;
    font-family: 'TT Norms Pro';
    font-size: 22px;
    line-height: 36px; /* 163.636% */

    max-width: 936px;
    margin: 0 auto;
  }
  .aup-header-founder-container {
    display: flex;
    align-items: stretch;
  }
  .aup-founder-image-wrapper {
    width: 100%;
    flex-basis: 43%;
    position: relative;
    display: flex;
    height: auto;
    border-radius: 3px 0px 0px 3px;
  }
  .aup-founder-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .aup-founder-right-content {
    width: 100%;
    flex-basis: 57%;
    padding: 5.6rem 10rem;
    padding-right: 12rem;

    background: url(https://cdn.shopify.com/s/files/1/0074/7156/2842/files/founder-right-back.jpg?v=1750023508);
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;

    display: flex;
    align-items: center;
    height: auto;

    border-radius: 0px 3px 3px 0px;
  }
  .aup-founder-right-content::before {
    content: '';
    border-radius: 0px 3px 3px 0px;
    background: rgba(230, 230, 230, 0.6);
    backdrop-filter: blur(75px);

    width: 100%;
    height: 100%;
    z-index: 0;
    position: absolute;
    top: 0;
    left: 0;
  }
  .aup-founder-right-content p {
    color: var(--Text-black, #000);
    font-family: 'TT Norms Pro';
    font-size: 22px;
    font-style: normal;
    font-weight: 450;
    line-height: 36px; /* 163.636% */
    position: relative;
    margin: 0;
  }
{% endstyle %}

<section class="about-us-page-header-section">
  <div class="container page-width">
    <div class="aup-header-banner-container">
      <h1 class="aup-header-title">
        {{ section.settings.heading }}
      </h1>
      <p class="aup-header-text">
        {{ section.settings.intro_text }}
      </p>
    </div>

    <div class="aup-header-founder-container">
      {% if section.settings.image %}
        <div class="aup-founder-image-wrapper">
          <img
            src="{{ section.settings.image | img_url: '800x' }}"
            alt="Founders"
            class="aup-founder-left-image"
          >
        </div>
      {% endif %}
      <div class="aup-founder-right-content">
        {{ section.settings.founders_text }}
      </div>
    </div>
  </div>
</section>
