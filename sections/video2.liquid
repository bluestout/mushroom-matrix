  .video-section-overlay{
    position: relative;
    padding: 3.5rem 1.5rem;
    display: block;
    width: 100%;
    background: none;
    display: flex;
    margin: 0;
    left: 0;
    top: 0;
    background: #E6E6E6;
  }
  .video-section-overlay .title-wrapper{
      position: relative;
  }
  .video-section .title-wrapper .title.inline-richtext.h1{
      font-size: 24px;
      line-height: 30px;
      padding: 0;
      margin: 0;
  }
