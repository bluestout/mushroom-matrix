{{ 'section-contact-banner.css' | asset_url | stylesheet_tag }}

<section class="contact-banner">
  <div class="contact-banner--image-content">
    {% if section.settings.image %}
      <div class="contact-banner--image-wrap small-hide">
        {{
          section.settings.image
          | image_url: width: master
          | image_tag: class: 'contact-banner--image', format: 'jpg', preload: true
        }}
      </div>
    {% endif %}
    {% if section.settings.mobile_image %}
      <div class="contact-banner--image-wrap large-up-hide medium-hide">
        {{
          section.settings.mobile_image
          | image_url: width: master
          | image_tag: class: 'contact-banner--mobile-image', format: 'jpg', preload: true
        }}
      </div>
    {% endif %}
  </div>

  <div class="contact-banner--text-content">
    <div class="contact-banner--text-content-left">
      <h1>{{ section.settings.heading }}</h1>
      <div class="contact-banner--text-phone">{{ section.settings.phones }}</div>
    </div>
    <div class="contact-banner--text-content-right">
      <div class="contact-banner--rte">{{ section.settings.text }}</div>
      {% comment %} <div class="contact-banner--rte">{{ page.content }}</div> {% endcomment %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact banner",
  "tag": "section",
  "class": "section section-contact-banner",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Contact Us",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "phones",
      "label": "Phone numbers"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Contact banner"
    }
  ]
}
{% endschema %}
