{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="account-banner--image-content">
  {% if settings.account_banner_image %}
    <div class="account-banner--image-wrap small-hide">
      {{
        settings.account_banner_image
        | image_url: width: master
        | image_tag: class: 'account-banner--image', format: 'jpg', preload: true
      }}
    </div>
  {% endif %}
  {% if settings.account_banner_mobile_image %}
    <div class="account-banner--image-wrap large-up-hide medium-hide">
      {{
        settings.account_banner_mobile_image
        | image_url: width: master
        | image_tag: class: 'account-banner--mobile-image', format: 'jpg', preload: true
      }}
    </div>
  {% endif %}
</div>

<div>
  {% render 'account-page-mobile-nav' %}
</div>

<div class="customer account profile section-{{ section.id }}-padding">
  <div class="account_head small-hide">
    {% comment %} <h1 class="customer__title">{{ 'customer.account.title' | t }}</h1> {% endcomment %}
    <p class="account_name_hello">Hello {{ customer.first_name }}!</p>
    <a href="{{ routes.account_url }}" class="account_head_item active"> Account </a>
    <a href="/account?view=orders" class="account_head_item"> Orders </a>
    <a href="{{ routes.account_logout_url }}" class="account_head_item"> Log out </a>
  </div>

  <div class="account_inner">
    <div class="account_inner_left">
      <div class="account-section p-3 bg-white">
        <div class="acnt_h">
          <h1 class="account-section-title">{{ 'customer.account.details' | t }}</h1>
          <p class="edit-link"><a href="/account?view=edit" class="dark">Edit</a></p>
        </div>
        <div class="account_user_info_content">
          <p class=""><strong>Name:</strong> {{ customer.name }}</p>
          <p class=""><strong>Email:</strong> {{ customer.email }}</p>
          <p><strong>Password:</strong> ************</p>
        </div>
      </div>
    </div>

    <div class="account_detail myaccount__order-history">
      <h2>Recent Orders</h2>
      <div class="account_detail_order_content">
        {% paginate customer.orders by 1 %}
          {% if customer.orders.size != 0 %}
            {% for order in customer.orders %}
              {%- assign tracking_info = '' -%}
              {%- for line_item in order.line_items -%}
                {%- if line_item.fulfillment -%}
                  {% capture tracking_line %}
                    {%- assign created_at = line_item.fulfillment.created_at | time_tag: format: 'date' -%}
                    {{ created_at }}
                    {{ line_item.fulfillment.tracking_company }}
                    {%- if line_item.fulfillment.tracking_number -%} #{{ line_item.fulfillment.tracking_number }} {%- endif -%}
                    {%- if line_item.fulfillment.tracking_url -%}
                      <a href="{{ line_item.fulfillment.tracking_url }}" style="white-space: nowrap;">
                        {{ 'customer.order.track_shipment' | t }}
                      </a>
                    {%- endif -%}
                  {% endcapture %}
                  {%- assign tracking_info = tracking_info | append: tracking_line -%}
                  {%- break -%}
                {%- endif -%}
              {% endfor %}

              <p class="order-details">
                <strong>{{ 'customer.orders.order_number' | t }}:</strong> {{ order.name }}
                <a href="{{ order.customer_url }}">View Details</a><br>
                <strong>{{ 'customer.orders.date' | t }}:</strong> {{ order.created_at | time_tag: format: 'date' -}}
                <br>
                <strong>{{ 'customer.orders.payment_status' | t }}:</strong> {{ order.financial_status_label -}}
                <br>
                <strong>{{ 'customer.orders.fulfillment_status' | t }}:</strong> {{ order.fulfillment_status_label }}
                {{ tracking_info -}}
                <br>
                <strong>{{ 'customer.orders.total' | t }}:</strong> {{ order.total_price | money }}
              </p>
            {% endfor %}

            <p><a href="/account?view=orders">View All Past Orders</a></p>

          {% else %}
            <p>{{ 'customer.orders.none' | t }}</p>
          {% endif %}
        {% endpaginate %}
      </div>
    </div>

    <div class="grid__item account_detail">
      <div class="account-section">
        <div class="inner_subscription">
          <h2 class="h4 account-section-title">Subscriptions</h2>
          {% comment %}
            {%- if customer.tags contains 'Active Subscriber' or customer.tags contains 'Inactive Subscriber' -%}
            	<span class="edit-link subscriptions-edit-link">
                {% render 'rtx-account-btn' %}
              </span>
            {%- endif -%}
          {% endcomment %}
        </div>
        <div class="account_details_subscription_content">
          {%- if customer.tags contains 'Active Subscriber' or customer.tags contains 'Inactive Subscriber' -%}
            <p class="text-center">
              {% render 'rtx-account-btn' %}
            </p>
            {% comment %}
              <div id="subscriptions-wrap" class="" data-customer-id="{{ customer.id }}">
                <p id="subscriptions-loading" class="text-center">Login...</p>
              </div>
            {% endcomment %}
          {%- else -%}
            {{ settings.nonsubscriber_text }}
            <h2 class="text-center">{{ settings.subscribe_why_title }}</h2>
            {% comment %}
              <div class="grid text-center">
                {%- for i in (1..3) -%}
                  {%- assign image_key = 'subscribe_why_image' | append: i -%}
                  {%- assign text_key = 'subscribe_why_text' | append: i -%}
                  <div class="grid__item">
                    {% if settings[image_key] != blank %}
                      {%- assign img_url = settings[image_key] | img_url: 'master' -%}
                      <div>
                        <img
                          class=""
                          src="{{ img_url }}"
                          widths="[45,90,180,360]"
                          aspectratio="{{ settings[image_key].aspect_ratio }}"
                          sizes="auto"
                          alt="{{ settings[image_key].alt | escape }}"
                        >
                      </div>
                    {%- endif -%}
                    {{ settings[text_key] }}
                  </div>
                {%- endfor -%}
              </div>
            {% endcomment %}
            <p class="text-center"><a href="/" class="btn btn--large">Shop Now</a></p>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-account.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
