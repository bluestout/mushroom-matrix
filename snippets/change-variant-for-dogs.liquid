<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Only run on product pages
    if (!window.location.pathname.includes('/products/')) return;

    // Only run if referrer contains "for-dogs"
    if (!document.referrer.includes('for-dogs')) return;

    // Find all variant radio inputs inside <variant-selects>
    const variantRadios = document.querySelectorAll('variant-selects input[type="radio"][name^="Size"]');

    if (variantRadios.length > 1) {
      // Select the second variant
      variantRadios[1].checked = true;

      // Trigger change event so Dawn updates the PDP
      variantRadios[1].dispatchEvent(new Event('change', { bubbles: false }));
    }
  });
</script>
